проверить 1 /\
  при \/ 3
    показать("Проверяемое меньше 3")
  при \/ 0 или /\ -1
    показать("Проверяемое меньше 0 или больше -1")
    прервать
  при 0
    показать("Это условие сработает")
  при == 0
    показать("Это условие не сработает")
    если 0 то показать("Привет") иначе показать("Пока")
  иначе
    показать("Это условие сработает, если не сработали другие")
