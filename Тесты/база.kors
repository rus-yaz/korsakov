!! Управляющие последовательности имеют поддержку двуязычного написания
строка = "Привет, мир!\н"
другая_строка = "Привет, мир!\n"

показать(строка)
показать(другая_строка)

показать("Привет," + " мир!")
показать("Привет, " * 3)

показать("Привет" == "Привет")
показать("Привет" == "Пока")

показать("Привет" != "Пока")
показать("Привет" != "Привет")

показать("б" /\ "а")
показать("б" /\ "б")
показать("б" /\ "в")

показать("б" \/ "а")
показать("б" \/ "б")
показать("б" \/ "в")

показать("б" /\= "а")
показать("б" /\= "б")
показать("б" /\= "в")

показать("б" \/= "а")
показать("б" \/= "б")
показать("б" \/= "в")

показать("!" и "!")
показать("" и "!")
показать("!" и "")
показать("" и "")

показать("!" или "!")
показать("" или "!")
показать("!" или "")
показать("" или "")

показать(не "")
показать(не "!")

