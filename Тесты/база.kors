!! Числа можно писать через "_" для лучшей читаемости
целое_число = 123_456
вещественное_число = 123_456.789_012

показать(целое_число)
показать(вещественное_число)

истинное = истина !! То же, что 1
ложное = ложь !! То же, что 0

показать(истинное)
показать(ложное)

показать(2 + 2)
показать(4 - 2)

показать(2 * 2)
показать(4 / 2)

показать(2 ** 2)
показать(2 // 4)

показать(1 == 1)
показать(1 == 0)

показать(1 != 0)
показать(1 != 1)

показать(1 /\ 0)
показать(1 /\ 1)
показать(1 /\ 2)

показать(1 \/ 2)
показать(1 \/ 1)
показать(1 \/ 0)

показать(1 /\= 0)
показать(1 /\= 1)
показать(1 /\= 2)

показать(1 \/= 2)
показать(1 \/= 1)
показать(1 \/= 0)

показать(1 и 1)
показать(0 и 1)
показать(1 и 0)
показать(0 и 0)

показать(1 или 1)
показать(0 или 1)
показать(1 или 0)
показать(0 или 0)

показать(не 0)
показать(не 1)

