включить "математический_модуль"

функция факториальная_сумма_цифр(число = нуль)
  если число == нуль то число = ввести_число("Введите число: ")

  результат = сумма(карта(к_целому, разделить(к_строке(факториал(число)))))

  показать("Сумма разрядов факториала от числа " + к_строке(число) + ": " + к_строке(результат))
  вернуть результат
