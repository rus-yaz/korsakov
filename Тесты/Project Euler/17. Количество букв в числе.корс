функция количество_букв(число)
  единицы = %(1: 3; 2: 3; 3: 5; 4: 4; 5: 4; 6: 3; 7: 5; 8: 5; 9: 4)%

  десятые = %(10: 3; 11: 6; 12: 6; 13: 8; 14: 8; 15: 7; 16: 7; 17: 9; 18: 8; 19: 8)%

  десятки = %(20: 6; 30: 6; 40: 5; 50: 5; 60: 5; 70: 7; 80: 6; 90: 6)%

  если 1 \/= число \/= 9 то
    вернуть единицы.число
  иначе если 10 \/= число\/= 19 то
    вернуть десятые.число
  иначе если 20 \/= число \/= 90 и не остаток(число; 10) то
    вернуть десятки.число
  иначе если 21 \/= число \/= 99 то
    вернуть (десятки.(к_целому(число / 10) * 10)) + единицы.(остаток(число; 10))
  иначе если 100 \/= число \/= 900 и не остаток(число; 100) то
    вернуть (единицы.(к_целому(число / 100))) + 7
  иначе если 101 \/= число \/= 999 то
    вернуть (единицы.(к_целому(число / 100))) + 10 + количество_букв(остаток(число; 100))
  иначе если число == 1000 то
    вернуть 11
  иначе
    вернуть 0
  ---
---

функция количество_букв_в_числе(предел = нуль)
  если предел == нуль то предел = ввести_число("Введите верхнюю границу диапазона для подсчётка количества букв: ")
  количество_букв = сумма(для а из диапазон(предел): количество_букв(а + 1))

  показать("Количество использованных букв в числах от 1 до " + к_строке(предел) + ": " + к_строке(количество_букв))
  вернуть количество_букв
---
