функция кратно_3_или_5(верхняя_граница = нуль)
  если верхняя_граница == нуль то верхняя_граница = ввести_число("Введите верхнюю границу: ")
  результат = 0

  для а от 0 до верхняя_граница через 3: результат += а
  для а от 0 до верхняя_граница через 5: если остаток(а, 3) то результат += а

  показать("Сумма чисел меньше " + к_строке(верхняя_граница) + " и кратных 3 и 5: " + к_строке(результат))
  вернуть результат
