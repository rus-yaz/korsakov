функция сумма_квадратной_разницы(предел = нуль)
  если предел == нуль то предел = ввести_число("Введите предел диапазона: ")
  числа = диапазон(1; предел + 1)
  квадрат_суммы = сумма_квадратов = 0

  для а от 1 до предел + 1
    сумма_квадратов += а ** 2
    квадрат_суммы += а
  ---

  квадрат_суммы **= 2

  разница = квадрат_суммы - сумма_квадратов

  показать("Разница между квадратом суммы и суммой квадратов ряда чисел меньше " + к_строке(предел) + ": " + к_строке(разница))
  вернуть разница
---
