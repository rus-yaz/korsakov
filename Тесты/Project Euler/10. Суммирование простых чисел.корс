функция суммирование_простых_чисел(предел = нуль)
  если предел == нуль то предел = ввести_число("Введите предел простых чисел ")

  простые_числа = %()%
  являются_простыми = %(истина)% * (предел + 1)
  являются_простыми.0 = являются_простыми.1 = ложь

  для число от 2 до к_целому(предел**0,5) + 1
    если являются_простыми.число то
      простые_числа += %(число)%
      для множитель от число**2 до предел + 1 через число
        являются_простыми.множитель = ложь
      ---
    ---
  ---

  для число от к_целому(предел**0,5) + 1 до предел + 1
    если являются_простыми.число то простые_числа += %(число)%
  ---

  показать("Сумма простых чисел меньше " + к_строке(предел) + ": " + к_строке(сумма(простые_числа)))
  вернуть сумма(простые_числа)
---
