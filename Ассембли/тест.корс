б = 1
++б
б = -б
б = не б

показать(б)
!! б == 0

а = 0
если 1 \/ а \/ 3 то
  а = 3
иначе если а \/ 4 то
  а = 4
иначе если а \/ 5 то
  а = 5
иначе
  а = 6
---

показать(а)
!! а == 4

!! ----------

б = 1
для а от 0 до 5
  если а == 2 то пропустить
  б += а
  если а == 3 то прервать
иначе
  б = 99
---

показать(а)
!! а == 3
показать(б)
!! б == 5

!! ----------

а = 5
б = 0
пока а /\ 0 и б \/ 5
  а -= 1
  б += 2
иначе
  б = 99
---

показать(а)
!! а == 2
показать(б)
!! б == 6

!! ----------

в = %(1; 2; 3; %(4; 5)%)%
показать(в.0)
показать(в.-3)
показать(в.-1.0)

г = в.0 + в.-1.1
показать(г)

!! в.-1 = в.0 + в.1

!! ----------

функция сложение(а; б)
  вернуть а + б
---

функция вычитание(а; б)
  вернуть а - б
---

функция удвоение(а)
  б = а * 2
  вернуть б
---

результат = сложение(6; 1)
показать(результат)
результат = вычитание(6; 1)
показать(результат)
показать(результат)
результат = удвоение(6)
показать(результат)
