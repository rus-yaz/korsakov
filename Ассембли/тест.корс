б = 1
++б
б = -б
б = не б

показать(б) !! 0

!! --------------------

а = 0
если 1 \/ а \/ 3 то
  а = 3
иначе если а \/ 4 то
  а = 4
иначе если а \/ 5 то
  а = 5
иначе
  а = 6
---

показать(а) !! 4

!! --------------------

б = 1
для а от 0 до 5
  если а == 2 то пропустить
  б += а
  если а == 3 то прервать
иначе
  б = 99
---

показать(а) !! 3
показать(б) !! 5

!! --------------------

а = 5
б = 0
пока а /\ 0 и б \/ 5
  а -= 1
  если а == 2 то пропустить
  б += 2
  если а == 3 то прервать
иначе
  б = 99
---

показать(а) !! 3
показать(б) !! 4

!! --------------------

в = %(1; 2; 3; %(4; 5)%)%
!! показать(в.0)    !! 1
!! показать(в.-3)   !! 2
!! показать(в.-1.0) !! 4
!!
!! г = в.0 + в.-1.1
!! показать(г) !! 6
!!
!! в.-1 = в.0 + в.1

!! --------------------

а = 3

функция сложение(а; б)
  вернуть а + б
---

функция вычитание(а; б)
  вернуть а - б
---

функция удвоение(а)
  в = а * 2
  вернуть в
---

б = 2

результат = сложение(6; 1)
показать(результат) !! 7
результат = вычитание(6; 1)
показать(результат) !! 5
результат = удвоение(6)
показать(результат) !! 12

показать(а) !! 3
показать(б) !! 2

!! --------------------

а = 2
проверить а /\
  при 1 и \/ 3
    показать(1) !! 1
  при 1 или == 3
    показать(2) !! 2
  при \/ 4
    показать(3) !! 3
    прервать
  при 5
    показать(4)
  при \/ 5
    показать(5)
  иначе
    показать(99)
---

