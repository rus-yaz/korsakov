replace = функция заменить(строка; заменяемое; замещающее="")
  индекс = 0

  пока индекс != длина(строка) - длина(заменяемое)
    если срез(строка; индекс; индекс + длина(заменяемое); 1) == заменяемое то
      строка = срез(строка; 0; индекс; 1) + замещающее + срез(строка; индекс + длина(заменяемое); длина(строка); 1)
      вернуть строка
    ---

    индекс++
  ---

  вернуть строка
---
