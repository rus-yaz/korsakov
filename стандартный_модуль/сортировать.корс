sort = функция сортировать(значение)
  если является_строкой(значение) то значение = к_списку(значение)

  для а от 0 до длина(значение)
    самое_маленькое = а

    для б от а + 1 до длина(значение)
      если значение.б \/ значение.самое_маленькое то
        самое_маленькое = б
      ---
    ---

    временное = значение.а
    значение.а = значение.самое_маленькое
    значение.самое_маленькое = временное
  ---

  вернуть значение
---
