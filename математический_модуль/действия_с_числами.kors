round_down = округлить_вниз = floor = функция пол(число): к_целому(число)
round_up = округлить_вверх = ceil = функция потолок(число): к_целому(число) + (к_целому(число) \/ число)

largest_common_divisor = функция наибольший_общий_делитель(а, б)
  пока б
    буфер = б
    б = модуль(а, б)
    а = буфер
  ---

  вернуть a
---

factorial = функция факториал(число)
  итог = 1

  для а от 2 до число + 1
    итог *= а
  иначе
    вернуть число
  ---

  вернуть итог
---
