degrees_in_radians = функция градусы_в_радианы(градусы): градусы * пи / 180
radians_in_degrees = функция радианы_в_градусы(радианы): радианы * 180 / пи

sin = син = функция синус(радианы)
  точность = 1 * 10**-15

  итог = а = радианы
  итерация = 0
  пока точность /\= а /\= -точность
    а *= -1 * радианы**2 / ((2 * итерация + 2) * (2 * итерация + 3))
    итог += а
    итерация++
  ---

  вернуть итог
---

cos = кос = функция косинус(радианы)
  точность = 1 * 10**-15

  итог = а = итерация = 1
  пока точность /\= а /\= -точность
    а *= -1 * радианы**2 / ((2 * итерация - 1) * (2 * итерация))
    итог += а
    итерация++
  ---

  вернуть итог
---
